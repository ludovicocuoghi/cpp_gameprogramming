{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++20",
                "-I",
                "/opt/homebrew/include",
                "-L",
                "/opt/homebrew/lib",
                "-lsfml-graphics",
                "-lsfml-window",
                "-lsfml-system",
                "${workspaceFolder}/main.cpp",
                "-o",
                "${workspaceFolder}/sfml_test"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Task for building SFML project"
        }
    ]
}
